<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">


	<servlet>
		<servlet-name>StoneR Endpoint</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>uk.ac.open.kmi.stoner.Stoner</param-value>
		</init-param>
	</servlet>

	<context-param>
        <param-name>file-store-home</param-name>
        <param-value>./stoner-store</param-value>
    </context-param>
    
	<servlet-mapping>
		<servlet-name>StoneR Endpoint</servlet-name>
		<url-pattern>/stone/*</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>uk.ac.open.kmi.stoner.Stoner</listener-class>
	</listener>
</web-app>
